<!DOCTYPE html>
{% set current_request = app.request %}
{% set current_locale = current_request.locale|default('fr') %}

<html lang="{{ current_locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="language" content="{{ current_locale }}">
    <base href="{% block meta_base_href %}{{ current_request.uri }}{% endblock meta_base_href %}"/>
    <link rel="canonical" href="{% block canonical_url %}{{ current_request.uri }}{% endblock %}">

    <title>
        {%- block title -%}
            {%- include '@Template/layout/_head_title.html.twig' -%}
        {%- endblock -%}
    </title>

    {% block stylesheets %}
        {% include '@Template/layout/_stylesheets.html.twig' %}
    {% endblock %}

    {% block head %}
        {% include '@Template/layout/_head.html.twig' %}
    {% endblock %}
</head>
<body
    class="{% block body_class %}{% endblock body_class %}"
>
{% block header %}
    {% include '@Template/layout/_body_header.html.twig' %}
{% endblock %}

<main>
    {% block body %}
        {% include '@Template/layout/_body.html.twig' %}
    {% endblock %}
</main>

{% block footer %}
    {% include '@Template/layout/_body_footer.html.twig' %}
{% endblock %}

{% block javascripts %}
    {% include '@Template/layout/_javascripts.html.twig' %}
{% endblock %}
</body>
</html>
